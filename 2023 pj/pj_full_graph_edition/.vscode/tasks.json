{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "D:\\mingw64\\bin\\gcc.exe",//编译器路径，替换为自己的
            "type": "shell",
            "args": [//编译选项，需要按自己的电脑更换库文件和源文件的路径
                "-I", "D:\\extra h for c cpp\\SDL2-2.28.4\\x86_64-w64-mingw32\\include\\SDL2",
                "-I", "D:\\extra h for c cpp\\SDL2_ttf-2.20.2\\x86_64-w64-mingw32\\include",
                "-I","D:\\extra h for c cpp\\SDL2_image-2.6.3\\x86_64-w64-mingw32\\include",
                "-L", "D:\\extra h for c cpp\\SDL2-2.28.4\\x86_64-w64-mingw32\\lib",
                "-L", "D:\\extra h for c cpp\\SDL2_ttf-2.20.2\\x86_64-w64-mingw32\\lib",
                "-L", "D:\\extra h for c cpp\\SDL2_image-2.6.3\\x86_64-w64-mingw32\\lib",
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/main.c",
                "${workspaceFolder}/Conway.c",
                "-fexec-charset=UTF-8",
                "-o",
                "${workspaceFolder}/program.exe",
                "-lmingw32",//这个不能少pp
                "-lSDL2main",
                "-lSDL2",
                "-lSDL2_ttf",
                "-lSDL2_image"
                
            ],//下面的可以不用管，直接复制即可
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}
